package application;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

import entities.Employee;

public class ExercList {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		List<Employee> listEmployye = new ArrayList<Employee>();
		System.out.print("How many employees will be registered? ");
		int qtRegistered = scan.nextInt();
		for(int i = 0; i < qtRegistered; i++) {
			Employee employee = new Employee();
			System.out.println("Emplyoee #"+i+":");
			System.out.println("id: ");
			employee.setId(scan.nextInt());
			System.out.println("Name: ");
			employee.setName(scan.next());
			System.out.println("Salary: ");
			employee.setSalary(scan.nextDouble());
			listEmployye.add(employee);
		}
		

	}

}
